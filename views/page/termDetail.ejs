<%- include('../layouts/header', {title: 'ข้อมูลเทอม'}); -%>
<%- include('../layouts/css'); -%>
<%- include('../layouts/endheader'); -%>
<div class="uk-flex">
    <%- include('../layouts/sideMenu'); -%>
    <div class="content-contianer">
        <div class="navbar">
            <div class="uk-flex">
                <div class="width-100 nav-left">
                    หน้าหลัก
                    <span uk-icon="chevron-right"></span> ข้อมูลเทอม
                </div>
                <%- include('../layouts/navBar'); -%>
            </div>
        </div>

        <div class="content">
            <div style="text-align: center;">
                <div style="text-align: center; margin-bottom: 30px;"> <b style="font-size: 30px;"> แก้ไขข้อมูล </b>
                </div>

                <form class="uk-form-horizontal " style="margin-right:100px;" action="/term/update" method="post">
                    <input type="hidden" name="_id" value="<%= termData._id %>">

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">เทอม</label>
                        <div class="uk-form-controls">
                            <input required class="uk-input " value="<%= termData.termNo %>" min="1" max="20" name="termNo"
                                type="number" placeholder="Default">
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">ปีการศึกษา</label>
                        <div class="uk-form-controls">
                            <input required class="uk-input " value="<%= termData.year %>" name="year" type="number"
                                placeholder="Default">
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">วันเริ่ม</label>
                        <div class="uk-form-controls">
                            <input class="uk-input " name="start" value="<%= termData.getDateCStart() %>" type="date" required>
                        </div>
                    </div>


                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">วันสิ้นสุด</label>
                        <div class="uk-form-controls">
                            <input class="uk-input " value="<%= termData.getDateCEnd()%>" name="end" type="date" required>
                        </div>
                    </div>

                    <div class="uk-flex row uk-flex-center">
                        <div style="text-align: center;margin-right: 10px;">
                            <button type="submit" class="uk-button uk-button-default">ยืนยัน</button>
                        </div>
                        <div style="text-align: center; ">
                            <a href="/term" class="uk-button uk-button-default">ยกเลิก</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/javascript'); -%>
<%- include('../layouts/footer'); -%>