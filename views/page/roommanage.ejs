<%- include('../layouts/header', {title: 'จัดการห้อง'}); -%>
<%- include('../layouts/css'); -%>
<%- include('../layouts/endheader'); -%>
<div class="uk-flex">
    <%- include('../layouts/sideMenu'); -%>
    <div class="content-contianer">
        <div class="navbar">
            <div class="uk-flex">
                <div class="width-100 nav-left">
                    หน้าหลัก
                    <span uk-icon="chevron-right"></span> จัดการห้อง
                </div>
                <%- include('../layouts/navBar'); -%>
            </div>
        </div>

        <div class="content">
            <div style="margin-bottom: 30px; text-align: center;"> <b style="font-size: 35px;"> จัดการห้อง </b></div>
            
            <form action="/room/add" class="uk-form-horizontal uk-margin-large" method="POST">
                <div style="text-align: center;">

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">ชื่อห้อง</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" name="name" type="text" min="0">
                        </div>
                    </div>
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">ตึก</label>
                        <div class="uk-form-controls">
                            <select name="building_id" class="uk-select">
                                <% buildings.forEach(function(building){ %>
                                <option id="building_id" value="<%= building._id%>">
                                    <%= building.building_name %>
                                </option>
                                <% });0 %>
                            </select>
                        </div>
                    </div>
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">แถว</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" name="row" type="number" min="1" max="20">
                        </div>
                    </div>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-horizontal-text">คอลัมน์</label>
                        <div class="uk-form-controls">
                            <input class="uk-input" name="col" type="number" min="1" max="20">
                        </div>
                    </div>

                    <div style=" display: flex;justify-content: center;">
                        <div class="form-bt" style="text-align: right;">
                            <button type="submit" style="margin-right: 90px;"
                                class="uk-button uk-button-default">ยืนยัน</button>
                        </div>
                    </div>

            </form>
        </div>
    </div>
</div>

<%- include('../layouts/javascript'); -%>
<script>
    $('.form-bt').css('width', $('.form-add').width() + 'px');
</script>
<%- include('../layouts/footer'); -%>